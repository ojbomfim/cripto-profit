@import '../../../stylus/color'

#recovery
	display flex
	flex-direction row

	#first
		transform rotate(180deg)
		height 100vh

	#content
		flex 1
		display flex
		flex-direction column
		justify-content center
		align-items center

form
	input[type='text']
		padding 20px
		flex auto
		background white
		border 2px solid mrp-escala-azul-1
		border-radius 10px
		opacity 1
		box-shadow 0px 0px 40px #C4D8F759
		width 381px
		height 44px
		margin 10px

		&::placeholder
			color #AFBFDD
			font-size 12px

	div
		display flex
		justify-content center

		button
			border 2px solid mrp-escala-azul-4
			padding 8px 30px
			margin 30px 0px 32px 0px
			border-radius 10px
			cursor pointer
			font-weight bolder
			transition all 0.5

		button:nth-child(1)
			background-color mrp-escala-azul-4
			color escala-cinza-1

			&:hover
				color mrp-escala-azul-4
				background-color escala-cinza-1

h1, p, a
	color #245ABF
	font-family Montserrat

h1
	font-size 30px

p
	font-size 16

span
	color #808080
