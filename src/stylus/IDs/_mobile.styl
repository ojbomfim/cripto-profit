#mobile
	display flex
	flex-direction column
	height 100%
	width 85%
	position fixed
	z-index 1
	top 0
	right 0
	background-color #245ABF
	padding 95px 35px 35px 35px

	.close
		margin-bottom 44px

	.profile
		max-height 50px
		margin-bottom 80px
		display flex
		align-items center

		img
			border-radius 50%
			box-shadow 0px 3px 6px mrp-escala-azul-1
			margin-right 14px

		span
			font-size 14
			color #FFFFFF
			justify-content flex-start
			font-weight Bold

	.content
		height 100%
		display flex
		flex-direction column
		justify-content space-between

		.options
			display flex
			flex-direction column

		.logout
			width 100%
			display flex
			justify-content center

			img
				margin-left 5px

	a
		font-size 14
		color #FFFFFF
		justify-content flex-start
		margin 10px 0px

		img
			max-height 20px
			margin-right 15px

	img
		height 100%
