.inside-card
	border-radius 10px
	padding 10px
	background-color mrp-branco-gelo-1
	display flex
	justify-content space-between

	span
		font-weight bold

	div:nth-child(1)
		display flex
		flex-direction column
		margin 0px 10px

	div:nth-child(2)
		display flex

		div
			display flex
			flex-direction column
			margin 0px 10px

@media screen and (max-width 600px)
	.inside-card
		border-radius 8px
		padding 5px

		div:nth-child(1)
			display flex
			flex-direction column
			margin 0px 5px

		div:nth-child(2)
			div
				margin 0px 5px

@media screen and (max-width 450px)
	.inside-card
		font-size 9px

@media screen and (max-width 350px)
	.inside-card
		font-size 8px